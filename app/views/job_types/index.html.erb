<h2>Carreras de interés para las vacantes</h2>
<div class="container footer_margin">
	<%= render "admins_dashboard/partials/dashboard-nav" %>
	<% if @job_types.empty? %>
		<div class="alert alert-warning">
			<p>No se ha agregado ninguna carrera para la vacante</p>
			<p><%= link_to "Agregar carrera de interés", new_job_type_path, class: 'btn btn-success' %></p>
		</div>
	<% else %>
		<table class="table">
			<thead>
				<tr scope="col">
					<td class="bold">Nombre</td>
					<td class="bold">Acciones</td>
				</tr>
			</thead>
			<tbody>
				<% @job_types.each do |jt| %>
					<tr>
						<td scope="row"><%= jt.area %></td>
						<td scope="row">
							<%= link_to "Editar", edit_job_type_path(jt), class: 'btn btn-primary' %>
							<%= link_to "Borrar", job_type_path(jt), method: :delete, class: 'btn btn-danger', data: { confirm: "En verdad quiere borrar la entrada?" } %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	<% end %>
	<%= link_to "Agregar carrera de interés", new_job_type_path, class: 'btn btn-success' %>
	<%= link_to "Regresar", admin_dashboard_path, class: 'btn btn-info'%>
</div>

