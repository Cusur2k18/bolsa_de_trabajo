<%= simple_form_for @education do |edu| %>
	<%= edu.input :university , label: t('label') %>
	<%= edu.input :education_level , label: t('label') %>
	<%= edu.input :major , label: t('label') %>
	<%= edu.input :admission_date , label: t('label') %>
	<%= edu.input :graduation_date , label: t('label') %>
	<%= edu.button :submit, class: 'btn btn-success' %>
<% end %>
