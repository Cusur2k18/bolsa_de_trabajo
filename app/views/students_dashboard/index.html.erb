	<div class="container">
		<div class="left">
			<div class="list-group side_nav">
				<%= link_to "Editar datos personales", edit_student_path(current_user.roleable.id), class: 'list-group-item'  %>
				<%= link_to "Editar contrasea y correo electronico", edit_user_registration_path(current_user.id), class: 'list-group-item'  %>
				<%= link_to "Verificar mis datos", student_path(current_user.roleable.id), class: 'list-group-item' %>
			</div>
		</div>
	</div>
<% else %>
	<% %>
<% end %>
