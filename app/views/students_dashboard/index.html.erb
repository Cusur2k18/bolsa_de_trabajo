<% if current_user.roleable_type == "Student" and user_signed_in? %>
	<h2>Bienvenido a tu perfil <%= @user.roleable.first_name %></h2>
	<div class="container">
		<div class="left">
			<div class="list-group side_nav">
				<%= link_to t('student_dashboard.edit_personal_data'), edit_student_path(current_user.roleable.id), class: 'list-group-item'  %>
				<%= link_to t('student_dashboard.edit_email_data'), edit_user_registration_path(current_user.id), class: 'list-group-item'  %>
				<%= link_to t('student_dashboard.new_phone_number'), new_phone_number_path, class: 'list-group-item' %>
				<%= link_to t('student_dashboard.new_education'), new_education_path, class: 'list-group-item' %>
				<%= link_to t('student_dashboard.see_educations'), educations_path, class: 'list-group-item' %>
			</div>
		</div>
		<%= render "students/partials/show_personal_data" %>
	</div>
<% else %>
	<%= render "errors/permission_denied" %>
<% end %>
