<h2><%= t(".title", resource: resource_class.model_name.human) %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
	<%= f.error_notification %>
	<div class="centered_form">
		<div class="form-inputs">

			<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
				<p>
				<%= t(".currently_waiting_confirmation_for_email", email: resource.unconfirmed_email) %>
				</p>
			<% end %>

			<%= f.input :company_name, label: t('companies.company_name'), autofocus: true, required: true %>
			<%= f.input :contact_first_name, label: t('companies.person_f_name'), required: true   %>
			<%= f.input :contact_last_name, label: t('companies.person_l_name'), required: true  %>
			<%= f.input :contact_last_n_name, label: t('companies.person_lm_name'), required: true %>
			<%= f.input :employment, label: t('companies.person_employment'), required: true %>
			<%= f.input :email, required: true, autofocus: true, label: t('companies.company_email') %>
			<%= f.input :password, autocomplete: "off", hint: t(".leave_blank_if_you_don_t_want_to_change_it"), required: false %>
			<%= f.input :password_confirmation, required: false %>
			<%= f.input :current_password, hint: t(".we_need_your_current_password_to_confirm_your_changes"), required: true %>
		</div>

		<div class="form-actions">
			<%= f.button :submit, t(".update") %>
		</div>
	<% end %>

	<h3><%= t(".cancel_my_account") %></h3>

	<p><%= t(".unhappy") %> <%= link_to t(".cancel_my_account"), registration_path(resource_name), data: { confirm: t(".are_you_sure") }, method: :delete %></p>
	<br />
	<%= link_to t("devise.shared.links.back"), :back %>
</div>
<br />
