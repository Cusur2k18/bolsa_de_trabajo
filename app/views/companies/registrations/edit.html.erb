<h2>Editar Compañía</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
	<%= f.error_notification %>
	<div id="devise_form">
		<div class="form-inputs" >
			<%= f.input :email, required: true, autofocus: true %>

			<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
				<p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
			<% end %>

			<%= f.input :company_name, label: "Nombre de la " %>
			<%= f.input :contact_first_name, label: "Nombre(s) de la persona que registra la compañía" %>
			<%= f.input :contact_last_name, label: "Apellido paterno de la persona que registra la compañía" %>
			<%= f.input :contact_last_n_name, label: "Apellido materno de la persona que registra la compañía" %>
			<%= f.input :password, autocomplete: "off", hint: "Déja éste espacio en blanco si no quieres cambiar tu contraseña", required: false %>
			<%= f.input :password_confirmation, required: false %>
			<%= f.input :current_password, hint: "Ingresa tu contraseña para guardar cambios", required: true %>
		</div>

		<div class="form-actions">
			<%= f.button :submit, "Actualizar datos" %>
		</div>
	<% end %>

	<h3>Eliminar cuenta</h3>

	<p id="bold-letters">¿Desea eliminar su cuenta?<br />
	<%= link_to "Eliminar mi cuenta", registration_path(resource_name), data: { confirm: "¿Está seguro que desea eliminar su cuenta?" }, method: :delete, class: 'btn btn-danger' %></p>

	<%= link_to "Back", :back, class: 'btn btn-info' %>
</div>
