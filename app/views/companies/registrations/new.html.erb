<h2><%= t("companies.registrations.new.company") %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	<%= f.error_notification %>

	<div class="centered_form">
		<div class="form-inputs">
			<%= f.input :company_name, label: t('companies.company_name'), autofocus: true, required: true %>
			<%= f.input :contact_first_name, label: t('companies.person_f_name'), required: true   %>
			<%= f.input :contact_last_name, label: t('companies.person_l_name'), required: true  %>
			<%= f.input :contact_last_n_name, label: t('companies.person_lm_name'), required: true %>
			<%= f.input :employment, label: t('companies.person_employment'), required: true %>
			<%= f.input :email, required: true, autofocus: true, label: t('companies.company_email') %>
			<%= f.input :password, required: true, hint: ("#{@minimum_password_length} caracteres como minimo" if @minimum_password_length), label:  t('companies.company_password') %>
			<%= f.input :password_confirmation, required: true, label: t('companies.password_confirmation') %>
			<%= f.hidden_field :is_validated, value: false %>
		</div>

		<div class="form-actions">
			<%= f.button :submit, t(".sign_up") %>
		</div>
	<% end %>
	<br />
	<%= render "companies/shared/links" %>
</div>
<br />
