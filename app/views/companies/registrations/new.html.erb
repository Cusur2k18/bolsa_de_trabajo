<h2><%= t(".sign_up") %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	<%= f.error_notification %>

	<div id="devise_form">
		<div class="form-inputs">
			<%= f.input :company_name, label: "Nombre de la compañía", autofocus: true, required: true %>
			<%= f.input :contact_first_name, label: "Nombre(s) de la persona que registra la compañía", required: true   %>
			<%= f.input :contact_last_name, label: "Apellido paterno de la persona que registra la compañía", required: true  %>
			<%= f.input :contact_last_n_name, label: "Apellido materno de la persona que registra la  compañía ", required: true %>
			<%= f.input :email, required: true, autofocus: true, label: "Correo electronico" %>
			<%= f.input :password, required: true, hint: ("#{@minimum_password_length} caracteres como minimo" if @minimum_password_length), label: "Contraseña" %>
			<%= f.input :password_confirmation, required: true, label: "Confirmar contraseña" %>
			<%= f.hidden_field :is_validated, value: false %>
		</div>

		<div class="form-actions">
			<%= f.button :submit, t(".sign_up") %>
		</div>
	<% end %>

	<%= render "companies/shared/links" %>
</div>

