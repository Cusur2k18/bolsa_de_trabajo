<h2>Ingresar como empresa</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<div id="devise_form">
		<div class="form-inputs">
			<%= f.input :email, required: false, autofocus: true, label: "Correo electronico"%>
			<%= f.input :password, required: false, label: "Contrasea" %>
			<%= f.input :remember_me, label: "Recordarme" ,as: :boolean if devise_mapping.rememberable? %>
		</div>

		<div class="form-actions">
			<%= f.button :submit, "Ingresar" %>
		</div>
	<% end %>

	<%= render "companies/shared/links" %>
</div>

