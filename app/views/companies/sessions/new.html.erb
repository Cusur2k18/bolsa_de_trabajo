<h2><%= t(".sign_in") %></h2>

<div class="centered_form">
	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<div class="form-inputs">
			<%= f.input :email, label: t('companies.sessions.new.email'), required: false, autofocus: true %>
			<%= f.input :password, label: t('companies.sessions.new.password'), required: false %>
			<%= f.input :remember_me, label: t('companies.sessions.remember_me'), as: :boolean if devise_mapping.rememberable? %>
		</div>

		<div class="form-actions">
			<%= f.button :submit, t(".sign_in") %>
		</div>
	<% end %>
	<br />
	<%= render "companies/shared/links" %>
</div>
<br />

