<%= simple_form_for @former_job do |fj| %>
	<%= fj.input :enterprise_name , label: "Nombre de la empresa" %>
	<%= fj.input :phone_number, label: "Número telefónico de la empresa" %>
	<%= fj.input :address, label: "Domicilio de la empresa" %>
	<%= fj.input :boss_name, label: "Jefe directo" %>
	<%= fj.input :job_title, label: "Puesto" %>
	<%= fj.input :first_paycheck, label: "Salario inicial(cantidad)" %>
	<%= fj.input :last_paycheck, label: "Último pago(cantidad)" %>
	<%= fj.input :activities, label: "Actividades que desempeñó" %>
	<%= fj.input :is_current_job, collection: FormerJob.is_current_jobs.keys, include_blank: false, label: "¿Empleo actual?" %>
	<%= fj.button :submit %>
<% end %>
