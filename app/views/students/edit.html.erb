<h2> <%= t('students.registrations.edit.title') %> </h2>
<div class="container">
	<%= simple_form_for @student do |stu| %>
		<%= stu.input :first_name, label: t('students.registrations.edit.first_name')  %>
		<%= stu.input :last_name, label: t('students.registrations.edit.last_name')  %>
		<%= stu.input :last_m_name, label: t('students.registrations.edit.last_m_name')  %>
		<%= stu.input :state, label: t('students.registrations.edit.state'), collection: Student.states.keys, :selected => @student.state %>
		<%= stu.input :udg_code, label: t('students.registrations.edit.udg_code'), disabled: true %>
		<%= stu.button :submit, t('students.registrations.edit.update'), class: 'btn btn-success' %>
		<%= link_to t('students.registrations.edit.go_back'), :back, class: 'btn btn-info' %>
	<% end %>
</div>
