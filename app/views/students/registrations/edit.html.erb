<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
	<%= f.error_notification %>
	<div class="form" id="devise_form">
		<div class="form-inputs" >
			<%= f.input :email, required: true, autofocus: true %>

			<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
				<p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
			<% end %>
			<%= f.input :first_name, label: "Nombre(s)" %>
			<%= f.input :last_name, label: "Apellido paterno" %>
			<%= f.input :last_m_name, label: "Apellido materno" %>
			<%= f.input :udg_code, label: "Codigo de UDG" %>
			<%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
			<%= f.input :password_confirmation, required: false %>
			<%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
		</div>

		<div class="form-actions">
			<%= f.button :submit, "Update" %>
		</div>
	<% end %>

	<h3>Eliminar mi cuenta</h3>

	<p id='bold-letters'>¿Desea eliminar su cuenta? <br />
	<%= link_to "Eliminar mi cuenta", registration_path(resource_name), data: { confirm: "¿Está seguro que desea eliminar su cuenta?" }, method: :delete, class: 'btn btn-danger' %></p>
	<%= link_to "Regresar", :back, class: 'btn btn-info' %>
</div>

